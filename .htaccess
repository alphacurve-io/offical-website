# Apache .htaccess configuration for optimal caching
# Use this if you're using Apache instead of Nginx

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cache static assets with content hashes for 1 year
    # Files with hashes (e.g., main.e0903950.js) can be cached long-term
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/eot "access plus 1 year"
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # Cache HTML for 4 hours (adjust as needed)
    ExpiresByType text/html "access plus 4 hours"
    
    # Cache JSON and manifest files for 1 day
    ExpiresByType application/json "access plus 1 day"
    ExpiresByType application/manifest+json "access plus 1 day"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML, fonts, SVG, and other text-based files
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml application/xml+rss application/rss+xml application/wasm application/manifest+json image/svg+xml font/truetype font/opentype font/woff font/woff2 application/vnd.ms-fontobject
    
    # Set compression level (1-9, 9 is maximum)
    DeflateCompressionLevel 9
    
    # Don't compress already compressed files
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|zip|gz|bz2|sit|rar|pdf)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
    
    # Make sure proxies don't deliver the wrong content
    Header append Vary User-Agent env=!dont-vary
</IfModule>

# Set cache control headers
<IfModule mod_headers.c>
    # Cache static assets with hashes for 1 year
    <FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|mp4|webm|webp)$">
        Header set Cache-Control "public, immutable, max-age=31536000"
    </FilesMatch>
    
    # Cache HTML for 4 hours
    <FilesMatch "\.(html)$">
        Header set Cache-Control "public, max-age=14400"
    </FilesMatch>
</IfModule>
